#include <bits/stdc++.h>
using namespace std;
using ull = unsigned long long;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    if(!(cin >> t)) return 0;
    while(t--) {
        long long k;
        ull x;
        cin >> k >> x;
        ull S = 1ULL << (k + 1);
        ull start = 1ULL << k;

        if (x == start) {
            cout << 0 << '\n' << '\n';
            continue;
        }

        vector<int> rev_ops;
        ull cur = x;
        while (cur != start) {
            ull tmp = cur << 1;
            if (tmp >= S) {
                tmp -= S;
                rev_ops.push_back(2);
            } else {
                rev_ops.push_back(1);
            }
            cur = tmp;
        }

        cout << rev_ops.size() << '\n';
        for (auto it = rev_ops.rbegin(); it != rev_ops.rend(); ++it) {
            cout << *it << (it + 1 == rev_ops.rend() ? '\n' : ' ');
        }
        cout << '\n';
    }
    return 0;
}
